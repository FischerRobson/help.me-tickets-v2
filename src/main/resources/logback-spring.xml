<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Define log level for specific packages (optional) -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.helpme" level="DEBUG"/>

    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg traceId=%X{traceId:-N/A} userId=%X{userId:-anonymous}%n
            </pattern>
        </encoder>
    </appender>

    <!-- Optional File Appender -->
    <!--
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} traceId=%X{traceId:-N/A} userId=%X{userId:-anonymous} %-5level [%thread] %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
    -->

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- <appender-ref ref="FILE"/> -->
    </root>

</configuration>
